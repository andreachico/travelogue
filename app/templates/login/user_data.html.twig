{% extends 'base.html.twig' %}

{% block content %}
    <div class="content-background ">
        <div class="page-head">
            {% include 'header/header.html.twig' %}
        </div>
        <div class="blogs transform pt-5 m-lg-5">
{#            <button class="btn btn-dark add-btn"><a class="btn-text" href="{{ path('create_blog') }}">Add Blog Post</a></button>#}
            <table id="blogs" class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Password</th>
                </tr>
                </thead>
                {% for user in users %}
                    <tbody>
                    <tr>
                        <td>{{ user.fullName }}</td>
                        <td>{{ user.email|length > 50 ? user.emai|slice(0, 40) ~ '...' : user.email  }}</td>
                        <td>{{ user.password }}</td>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
